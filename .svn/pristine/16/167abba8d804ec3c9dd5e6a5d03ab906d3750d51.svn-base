}





ion-footer {
    .toolbar {
        text-align: center;
    }
    .toolbar-background {
        background:#3f51b5;
    }
}

.scroll-content {
    overflow: auto;
}

.list-md {
    .item-block{
        .item-inner {
            border-bottom: unset;
        }
    }
}

.list-ios {
    .item-block{
        .item-ios {
            border-bottom: 0px solid #3f51b5;
        }
    }
}

.jumlah{
    display: inline-block;
    min-width: 10px;
    padding: 3px 7px;
    font-size: 12px;
    font-weight: 700;
    line-height: 1;
    color: #fff;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    background-color: #f39c12;
    border-radius: 10px;
}